# AlgoCampus Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=AlgoCampus
DEBUG=true

# Database
# For SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./algocampus.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/algocampus

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Algorand Network Configuration
ALGORAND_NETWORK=testnet
ALGORAND_ALGOD_URL=https://testnet-api.algonode.cloud
ALGORAND_ALGOD_TOKEN=
ALGORAND_INDEXER_URL=https://testnet-idx.algonode.cloud
ALGORAND_INDEXER_TOKEN=

# Smart Contract App IDs (set after deployment)
GROUP_MANAGER_APP_ID=0
EXPENSE_TRACKER_APP_ID=0
SETTLEMENT_EXECUTOR_APP_ID=0

# Contract Creator (KEEP SECURE! NEVER COMMIT!)
CREATOR_MNEMONIC=your twenty five word mnemonic phrase goes here...

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Indexer Service
INDEXER_START_ROUND=0
INDEXER_POLL_INTERVAL=4

# Logging
LOG_LEVEL=INFO

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
